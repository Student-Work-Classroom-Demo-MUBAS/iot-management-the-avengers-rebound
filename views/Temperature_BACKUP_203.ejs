<!DOCTYPE html>
<html>
<head>
  <title>Temperature - Smart Home</title>
  <style>
    .climate-grid { display: grid; grid-template-columns: 2fr 1fr; gap: 20px; }
    .climate-card { background: white; padding: 20px; border-radius: 10px; }
    .room-temps { display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 15px; }
    .room-temp { text-align: center; padding: 15px; background: #f8f9fa; border-radius: 8px; }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <%- include('partials/sidebar') %>

  <div class="main-content">
    <div class="header">
      <div class="page-title">
        <h2>Temperature & Climate</h2>
        <p>Monitor and control your home environment</p>
      </div>
    </div>

    <div class="climate-grid">
      <!-- Main Chart -->
      <div class="climate-card">
        <div class="chart-header">
          <div class="chart-title">Temperature & Humidity - Last 24 Hours</div>
        </div>
        <canvas id="climateChart" height="250"></canvas>
      </div>

      <!-- Current Readings -->
      <div class="climate-card">
        <h3>Current Readings</h3>
        <div class="current-reading">
          <div class="reading-value" id="current-temp">22.5°C</div>
          <div class="reading-label">Temperature</div>
        </div>
        <div class="current-reading">
          <div class="reading-value" id="current-humidity">45%</div>
          <div class="reading-label">Humidity</div>
        </div>
        <div class="thermostat-control">
          <h4>Thermostat</h4>
          <div class="temp-control">
            <button class="temp-btn">-</button>
            <span class="set-temp">22°C</span>
            <button class="temp-btn">+</button>
          </div>
          <button class="btn-primary">Apply</button>
        </div>
      </div>
    </div>

    <!-- Room Temperatures -->
    <div class="climate-card">
      <h3>Room Temperatures</h3>
      <div class="room-temps">
        <div class="room-temp">
          <div class="room-name">Living Room</div>
          <div class="room-value">22.5°C</div>
        </div>
        <div class="room-temp">
          <div class="room-name">Bedroom</div>
          <div class="room-value">21.0°C</div>
        </div>
        <div class="room-temp">
          <div class="room-name">Kitchen</div>
          <div class="room-value">23.2°C</div>
        </div>
        <div class="room-temp">
          <div class="room-name">Office</div>
          <div class="room-value">22.8°C</div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>