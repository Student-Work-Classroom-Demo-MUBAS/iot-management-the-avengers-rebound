<!DOCTYPE html>
<html>
<head>
  <title>Appliances - Smart Home</title>
  <style>
    .appliance-card { background: white; padding: 20px; border-radius: 10px; margin-bottom: 20px; }
    .appliance-header { display: flex; justify-content: between; align-items: center; margin-bottom: 15px; }
    .appliance-stats { display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 15px; }
    .appliance-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 20px; }
    .appliance-item { background: #f8f9fa; padding: 15px; border-radius: 8px; }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <%- include('partials/sidebar') %>

  <div class="main-content">
    <div class="header">
      <div class="page-title">
        <h2>Appliances</h2>
        <p>Manage your smart appliances</p>
      </div>
      <button class="btn btn-primary">
        <i class="fas fa-plus"></i> Add Appliance
      </button>
    </div>

    <!-- Appliance Statistics -->
    <div class="appliance-card">
      <div class="appliance-header">
        <h3>Overview</h3>
      </div>
      <div class="appliance-stats">
        <div class="stat">
          <div class="stat-value"><%= data.appliances.length %></div>
          <div class="stat-label">Total Appliances</div>
        </div>
        <div class="stat">
          <div class="stat-value"><%= data.appliances.filter(a => a.status === 'Online').length %></div>
          <div class="stat-label">Active Now</div>
        </div>
        <div class="stat">
          <div class="stat-value" id="total-power">0W</div>
          <div class="stat-label">Total Power</div>
        </div>
        <div class="stat">
          <div class="stat-value" id="energy-savings">15%</div>
          <div class="stat-label">Energy Savings</div>
        </div>
      </div>
    </div>

    <!-- Appliances by Category -->
    <% data.categories.forEach(function(category) { %>
    <div class="appliance-card">
      <div class="appliance-header">
        <h3><%= category %></h3>
      </div>
      <div class="appliance-grid">
        <% data.appliances.filter(app => app.category === category).forEach(function(appliance) { %>
        <div class="appliance-item">
          <div class="appliance-info">
            <div class="appliance-icon">
              <i class="<%= appliance.icon %>"></i>
            </div>
            <div>
              <div class="appliance-name"><%= appliance.name %></div>
              <div class="appliance-location"><%= appliance.location %></div>
            </div>
          </div>
          <div class="appliance-details">
            <div>Power: <%= appliance.power %></div>
            <div class="status status-<%= appliance.status.toLowerCase() %>">
              <%= appliance.status %>
            </div>
          </div>
          <div class="appliance-controls">
            <button class="action-btn power-btn" data-appliance-id="<%= appliance._id %>">
              <i class="fas fa-power-off"></i>
            </button>
            <button class="action-btn edit-btn">
              <i class="fas fa-edit"></i>
            </button>
            <button class="action-btn schedule-btn">
              <i class="fas fa-clock"></i>
            </button>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    <% }); %>
  </div>

  <%- include('partials/footer') %>
</body>
</html>