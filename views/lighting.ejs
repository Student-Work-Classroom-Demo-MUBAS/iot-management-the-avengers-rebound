<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="main-content">
  <div class="header">
    <div class="page-title">
      <h2>Lighting</h2>
      <p>Adjust brightness, scenes, and schedules across rooms</p>
    </div>
    <div class="actions">
      <button class="btn"><i class="fas fa-plus"></i> Add Scene</button>
    </div>
  </div>

  <div class="dashboard-cards">
    <div class="card light">
      <div class="card-header">
        <div class="card-title">Average Brightness</div>
        <div class="card-icon light-icon"><i class="fas fa-sun"></i></div>
      </div>
      <div class="card-value"><%= data.lighting.avgBrightness %></div>
      <div class="card-footer">
        <span>Active lights: <%= data.lighting.activeCount %> / <%= data.lighting.totalCount %></span>
        <span><%= data.lighting.scene %></span>
      </div>
    </div>

    <div class="card light">
      <div class="card-header">
        <div class="card-title">Energy impact</div>
        <div class="card-icon"><i class="fas fa-lightbulb"></i></div>
      </div>
      <div class="card-value"><%= data.lighting.energyToday %></div>
      <div class="card-footer">
        <span>Cost: <%= data.lighting.costToday %></span>
        <span class="trend <%= data.lighting.trend %>"><i class="fas fa-arrow-<%= data.lighting.trend %>"></i> <%= data.lighting.trendValue %></span>
      </div>
    </div>
  </div>

  <div class="charts">
    <div class="chart-container">
      <div class="chart-header">
        <div class="chart-title">Light Levels by Room</div>
      </div>
      <canvas id="lightLevelsChart" height="320"></canvas>
    </div>
    <div class="chart-container">
      <div class="chart-header">
        <div class="chart-title">On/Off Timeline</div>
      </div>
      <canvas id="lightTimelineChart" height="320"></canvas>
    </div>
  </div>

  <div class="devices-container">
    <div class="devices-header">
      <div class="devices-title">Lights</div>
      <div class="filters">
        <select>
          <option>All Rooms</option>
          <% data.lighting.rooms.forEach(function(room){ %>
            <option><%= room %></option>
          <% }) %>
        </select>
      </div>
    </div>
    <table class="device-table">
      <thead>
        <tr>
          <th>Light</th>
          <th>Room</th>
          <th>Brightness</th>
          <th>Color</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% data.lighting.lights.forEach(function(l){ %>
          <tr>
            <td class="device-info">
              <div class="device-icon"><i class="<%= l.icon %>"></i></div>
              <div>
                <div class="device-name"><%= l.name %></div>
                <div class="device-location"><%= l.model %></div>
              </div>
            </td>
            <td><%= l.room %></td>
            <td><%= l.brightness %></td>
            <td><%= l.color %></td>
            <td><span class="status status-<%= l.status.toLowerCase() %>"><%= l.status %></span></td>
            <td>
              <button class="action-btn"><i class="fas fa-adjust"></i></button>
              <button class="action-btn"><i class="fas fa-palette"></i></button>
              <button class="action-btn"><i class="fas fa-toggle-on"></i></button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div class="devices-container">
    <div class="devices-header">
      <div class="devices-title">Scenes</div>
    </div>
    <div class="scene-grid">
      <% data.lighting.scenes.forEach(function(s){ %>
        <div class="scene-card">
          <div class="scene-name"><%= s.name %></div>
          <div class="scene-meta">Rooms: <%= s.rooms.join(', ') %></div>
          <div class="scene-meta">Preset: <%= s.preset %></div>
          <div class="scene-actions">
            <button class="btn"><i class="fas fa-play"></i> Apply</button>
            <button class="btn"><i class="fas fa-edit"></i> Edit</button>
            <button class="btn"><i class="fas fa-trash"></i> Delete</button>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>