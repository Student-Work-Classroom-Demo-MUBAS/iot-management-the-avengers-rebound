<!DOCTYPE html>
<html>
<head>
  <title>Lighting - Smart Home</title>
  <style>
    .lights-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 20px; }
    .light-card { background: white; padding: 20px; border-radius: 10px; }
    .light-header { display: flex; justify-content: between; align-items: center; margin-bottom: 15px; }
    .light-controls { display: flex; gap: 10px; align-items: center; }
    .brightness-slider { width: 100%; margin: 10px 0; }
    .scene-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-top: 20px; }
    .scene-card { padding: 15px; background: #f8f9fa; border-radius: 8px; text-align: center; cursor: pointer; }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <%- include('partials/sidebar') %>

  <div class="main-content">
    <div class="header">
      <div class="page-title">
        <h2>Lighting Control</h2>
        <p>Manage your home lighting</p>
      </div>
    </div>

    <!-- Light Devices -->
    <div class="lights-grid">
      <% data.lightDevices.forEach(function(light) { %>
      <div class="light-card">
        <div class="light-header">
          <div>
            <h3><%= light.name %></h3>
            <p><%= light.location %></p>
          </div>
          <div class="light-controls">
            <label class="switch">
              <input type="checkbox" <%= light.status === 'Online' ? 'checked' : '' %> data-light-id="<%= light._id %>">
              <span class="slider"></span>
            </label>
          </div>
        </div>
        
        <div class="light-properties">
          <div class="property">
            <label>Brightness</label>
            <input type="range" class="brightness-slider" value="<%= light.brightness || 100 %>" min="0" max="100" data-light-id="<%= light._id %>">
          </div>
          <% if (light.color) { %>
          <div class="property">
            <label>Color Temperature</label>
            <input type="range" class="color-slider" value="<%= light.color %>" min="2700" max="6500" data-light-id="<%= light._id %>">
          </div>
          <% } %>
        </div>
      </div>
      <% }); %>
    </div>

    <!-- Lighting Scenes -->
    <div class="light-card">
      <h3>Lighting Scenes</h3>
      <div class="scene-grid">
        <div class="scene-card" data-scene="evening">
          <i class="fas fa-sun" style="font-size: 24px; margin-bottom: 10px;"></i>
          <div>Evening</div>
        </div>
        <div class="scene-card" data-scene="reading">
          <i class="fas fa-book" style="font-size: 24px; margin-bottom: 10px;"></i>
          <div>Reading</div>
        </div>
        <div class="scene-card" data-scene="movie">
          <i class="fas fa-film" style="font-size: 24px; margin-bottom: 10px;"></i>
          <div>Movie Night</div>
        </div>
        <div class="scene-card" data-scene="party">
          <i class="fas fa-music" style="font-size: 24px; margin-bottom: 10px;"></i>
          <div>Party</div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>