<!DOCTYPE html>
<html>
<head>
  <title>Settings - Smart Home</title>
  <style>
    .settings-grid { display: grid; grid-template-columns: 250px 1fr; gap: 30px; }
    .settings-nav { background: white; border-radius: 10px; padding: 20px; }
    .settings-content { background: white; border-radius: 10px; padding: 30px; }
    .nav-item { padding: 15px; cursor: pointer; border-radius: 8px; margin-bottom: 5px; }
    .nav-item.active { background: #007bff; color: white; }
    .form-group { margin-bottom: 20px; }
    .form-label { display: block; margin-bottom: 5px; font-weight: bold; }
    .form-control { width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <%- include('partials/sidebar') %>

  <div class="main-content">
    <div class="header">
      <div class="page-title">
        <h2>Settings</h2>
        <p>Manage your smart home system</p>
      </div>
    </div>

    <div class="settings-grid">
      <!-- Settings Navigation -->
      <div class="settings-nav">
        <div class="nav-item active" data-tab="profile">Profile Settings</div>
        <div class="nav-item" data-tab="devices">Device Management</div>
        <div class="nav-item" data-tab="energy">Energy Settings</div>
        <div class="nav-item" data-tab="notifications">Notifications</div>
        <div class="nav-item" data-tab="security">Security</div>
        <div class="nav-item" data-tab="system">System</div>
      </div>

      <!-- Settings Content -->
      <div class="settings-content">
        <!-- Profile Settings -->
        <div class="settings-tab active" id="profile-tab">
          <h3>Profile Settings</h3>
          <div class="form-group">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" value="<%= data.user ? data.user.name : 'Guest User' %>">
          </div>
          <div class="form-group">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" value="user@example.com">
          </div>
          <div class="form-group">
            <label class="form-label">Phone</label>
            <input type="tel" class="form-control" value="+1 (555) 123-4567">
          </div>
          <button class="btn btn-primary">Save Changes</button>
        </div>

        <!-- Device Management -->
        <div class="settings-tab" id="devices-tab">
          <h3>Device Management</h3>
          <div class="device-stats">
            <p>Total Devices: <strong><%= data.totalDevices || 0 %></strong></p>
            <p>Connected: <strong><%= data.connectedDevices || 0 %></strong></p>
          </div>
          <div class="form-group">
            <label class="form-label">Auto-Discovery</label>
            <div>
              <label class="switch">
                <input type="checkbox" checked>
                <span class="slider"></span>
              </label>
              <span>Enable automatic device discovery</span>
            </div>
          </div>
          <button class="btn btn-secondary">
            <i class="fas fa-sync"></i> Scan for Devices
          </button>
        </div>

        <!-- Energy Settings -->
        <div class="settings-tab" id="energy-tab">
          <h3>Energy Settings</h3>
          <div class="form-group">
            <label class="form-label">Electricity Rate ($/kWh)</label>
            <input type="number" class="form-control" value="0.15" step="0.01">
          </div>
          <div class="form-group">
            <label class="form-label">Peak Hours</label>
            <select class="form-control">
              <option>6:00 AM - 10:00 PM</option>
              <option>7:00 AM - 11:00 PM</option>
            </select>
          </div>
          <div class="form-group">
            <label class="form-label">Energy Saving Mode</label>
            <div>
              <label class="switch">
                <input type="checkbox" checked>
                <span class="slider"></span>
              </label>
              <span>Enable energy saving optimizations</span>
            </div>
          </div>
        </div>

        <!-- Notifications -->
        <div class="settings-tab" id="notifications-tab">
          <h3>Notification Settings</h3>
          <div class="form-group">
            <label class="form-label">Email Notifications</label>
            <div>
              <label class="switch">
                <input type="checkbox" checked>
                <span class="slider"></span>
              </label>
              <span>Receive email alerts</span>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label">Push Notifications</label>
            <div>
              <label class="switch">
                <input type="checkbox" checked>
                <span class="slider"></span>
              </label>
              <span>Receive push notifications</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>